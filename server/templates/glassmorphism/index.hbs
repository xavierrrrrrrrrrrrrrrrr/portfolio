<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{personalInfo.name}} - Glassmorphism Portfolio</title>
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="style-glassmorphism">
  <!-- Background -->
  <div class="background">
    <div class="gradient-bg"></div>
    <div class="floating-elements">
      <div class="floating-element element-1"></div>
      <div class="floating-element element-2"></div>
      <div class="floating-element element-3"></div>
      <div class="floating-element element-4"></div>
      <div class="floating-element element-5"></div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="navbar glass">
    <div class="nav-container">
      <div class="nav-logo">
        <span>{{personalInfo.name}}</span>
      </div>
      <ul class="nav-menu">
        <li><a href="#home" class="nav-link">Home</a></li>
        <li><a href="#about" class="nav-link">About</a></li>
        <li><a href="#projects" class="nav-link">Projects</a></li>
        <li><a href="#education" class="nav-link">Education</a></li>
        {{#if achievements.length}}
        <li><a href="#achievements" class="nav-link">Achievements</a></li>
        {{/if}}
        <li><a href="#contact" class="nav-link">Contact</a></li>
      </ul>
      <div class="hamburger">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="home" class="hero">
    <div class="hero-container">
      <div class="hero-content glass">
        <div class="hero-avatar">
          <div class="avatar-circle">
            <i class="fas fa-user"></i>
          </div>
          <div class="avatar-glow"></div>
        </div>
        <h1 class="hero-title">{{personalInfo.name}}</h1>
        <p class="hero-subtitle">{{#if tagline}}{{tagline}}{{else}}Creative Developer & Designer{{/if}}</p>
        <p class="hero-description">{{#if enhancedAbout}}{{enhancedAbout}}{{else}}{{aboutMe}}{{/if}}</p>
        <div class="hero-buttons">
          <a href="#projects" class="btn btn-primary glass">
            <i class="fas fa-rocket"></i>
            <span>View Projects</span>
          </a>
          <a href="#contact" class="btn btn-secondary glass">
            <i class="fas fa-paper-plane"></i>
            <span>Get In Touch</span>
          </a>
        </div>
        <div class="hero-social">
          {{#if socialLinks.github}}
          <a href="{{socialLinks.github}}" target="_blank" class="social-icon glass">
            <i class="fab fa-github"></i>
          </a>
          {{/if}}
          {{#if socialLinks.linkedin}}
          <a href="{{socialLinks.linkedin}}" target="_blank" class="social-icon glass">
            <i class="fab fa-linkedin"></i>
          </a>
          {{/if}}
          {{#if socialLinks.twitter}}
          <a href="{{socialLinks.twitter}}" target="_blank" class="social-icon glass">
            <i class="fab fa-twitter"></i>
          </a>
          {{/if}}
          {{#if socialLinks.website}}
          <a href="{{socialLinks.website}}" target="_blank" class="social-icon glass">
            <i class="fas fa-globe"></i>
          </a>
          {{/if}}
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="about">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">About Me</h2>
        <div class="section-line"></div>
      </div>
      <div class="about-content">
        <div class="about-text glass">
          <p>{{#if enhancedAbout}}{{enhancedAbout}}{{else}}{{aboutMe}}{{/if}}</p>
          <div class="contact-details">
            <div class="contact-item">
              <i class="fas fa-envelope"></i>
              <span>{{personalInfo.email}}</span>
            </div>
            <div class="contact-item">
              <i class="fas fa-map-marker-alt"></i>
              <span>{{personalInfo.location}}</span>
            </div>
            {{#if personalInfo.phone}}
            <div class="contact-item">
              <i class="fas fa-phone"></i>
              <span>{{personalInfo.phone}}</span>
            </div>
            {{/if}}
          </div>
        </div>
        <div class="skills-container glass">
          <h3>Skills & Technologies</h3>
          <div class="skills-cloud">
            {{#each projects}}
              {{#each technologies}}
                <span class="skill-bubble glass">{{this}}</span>
              {{/each}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="projects">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Featured Projects</h2>
        <div class="section-line"></div>
      </div>
      <div class="projects-grid">
        {{#each projects}}
        <div class="project-card glass" data-tilt>
          <div class="project-image">
            {{#if imageUrl}}
            <img src="{{imageUrl}}" alt="{{name}}" loading="lazy">
            {{else}}
            <div class="project-placeholder">
              <i class="fas fa-code"></i>
            </div>
            {{/if}}
            <div class="project-overlay">
              <div class="project-links">
                {{#if githubUrl}}
                <a href="{{githubUrl}}" target="_blank" class="project-link glass">
                  <i class="fab fa-github"></i>
                </a>
                {{/if}}
                {{#if liveUrl}}
                <a href="{{liveUrl}}" target="_blank" class="project-link glass">
                  <i class="fas fa-external-link-alt"></i>
                </a>
                {{/if}}
              </div>
            </div>
          </div>
          <div class="project-content">
            <h3 class="project-title">{{name}}</h3>
            <p class="project-description">{{description}}</p>
            <div class="project-tech">
              {{#each technologies}}
              <span class="tech-tag glass">{{this}}</span>
              {{/each}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  <!-- Education Section -->
  <section id="education" class="education">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Education</h2>
        <div class="section-line"></div>
      </div>
      <div class="education-timeline">
        {{#each education}}
        <div class="timeline-item glass">
          <div class="timeline-icon">
            <i class="fas fa-graduation-cap"></i>
          </div>
          <div class="timeline-content">
            <h3>{{degree}} in {{field}}</h3>
            <h4>{{institution}}</h4>
            <div class="timeline-meta">
              <span class="timeline-date">
                <i class="fas fa-calendar"></i>
                {{startYear}} - {{endYear}}
              </span>
              {{#if gpa}}
              <span class="timeline-gpa">
                <i class="fas fa-star"></i>
                GPA: {{gpa}}
              </span>
              {{/if}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  {{#if achievements.length}}
  <!-- Achievements Section -->
  <section id="achievements" class="achievements">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Achievements</h2>
        <div class="section-line"></div>
      </div>
      <div class="achievements-grid">
        {{#each achievements}}
        <div class="achievement-card glass">
          <div class="achievement-icon">
            <i class="fas fa-trophy"></i>
          </div>
          <div class="achievement-content">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <div class="achievement-meta">
              {{#if organization}}
              <span class="achievement-org">{{organization}}</span>
              {{/if}}
              <span class="achievement-date">{{date}}</span>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>
  {{/if}}

  <!-- Contact Section -->
  <section id="contact" class="contact">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Let's Connect</h2>
        <div class="section-line"></div>
      </div>
      <div class="contact-content">
        <div class="contact-info glass">
          <h3>Get In Touch</h3>
          <p>I'm always excited to work on new projects and collaborate with amazing people.</p>
          <div class="contact-methods">
            <a href="mailto:{{personalInfo.email}}" class="contact-method glass">
              <div class="method-icon">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="method-info">
                <span class="method-label">Email</span>
                <span class="method-value">{{personalInfo.email}}</span>
              </div>
            </a>
            {{#if personalInfo.phone}}
            <a href="tel:{{personalInfo.phone}}" class="contact-method glass">
              <div class="method-icon">
                <i class="fas fa-phone"></i>
              </div>
              <div class="method-info">
                <span class="method-label">Phone</span>
                <span class="method-value">{{personalInfo.phone}}</span>
              </div>
            </a>
            {{/if}}
            <div class="contact-method glass">
              <div class="method-icon">
                <i class="fas fa-map-marker-alt"></i>
              </div>
              <div class="method-info">
                <span class="method-label">Location</span>
                <span class="method-value">{{personalInfo.location}}</span>
              </div>
            </div>
          </div>
        </div>
        <div class="contact-form-container glass">
          <form class="contact-form" id="contact-form">
            <div class="form-group">
              <input type="text" id="name" name="name" required class="form-input glass">
              <label for="name" class="form-label">Your Name</label>
            </div>
            <div class="form-group">
              <input type="email" id="email" name="email" required class="form-input glass">
              <label for="email" class="form-label">Your Email</label>
            </div>
            <div class="form-group">
              <input type="text" id="subject" name="subject" required class="form-input glass">
              <label for="subject" class="form-label">Subject</label>
            </div>
            <div class="form-group">
              <textarea id="message" name="message" required class="form-input glass"></textarea>
              <label for="message" class="form-label">Your Message</label>
            </div>
            <button type="submit" class="btn btn-primary glass">
              <i class="fas fa-paper-plane"></i>
              <span>Send Message</span>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer glass">
    <div class="container">
      <div class="footer-content">
        <p>&copy; {{currentYear}} {{personalInfo.name}}. Crafted with glass and code.</p>
        <div class="footer-social">
          {{#if socialLinks.github}}
          <a href="{{socialLinks.github}}" target="_blank" class="footer-social-link glass">
            <i class="fab fa-github"></i>
          </a>
          {{/if}}
          {{#if socialLinks.linkedin}}
          <a href="{{socialLinks.linkedin}}" target="_blank" class="footer-social-link glass">
            <i class="fab fa-linkedin"></i>
          </a>
          {{/if}}
          {{#if socialLinks.twitter}}
          <a href="{{socialLinks.twitter}}" target="_blank" class="footer-social-link glass">
            <i class="fab fa-twitter"></i>
          </a>
          {{/if}}
          {{#if socialLinks.website}}
          <a href="{{socialLinks.website}}" target="_blank" class="footer-social-link glass">
            <i class="fas fa-globe"></i>
          </a>
          {{/if}}
        </div>
      </div>
    </div>
  </footer>

  <script src="script.js"></script>
</body>
</html>