<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{personalInfo.name}} - Portfolio</title>
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap">
</head>
<body class="style-creative">
  <header>
    <div class="container">
      <h1>{{personalInfo.name}}</h1>
      <p class="tagline">{{personalInfo.location}} | {{personalInfo.email}}</p>
    </div>
  </header>
  
  <section class="about">
    <div class="container">
      <h2>About Me</h2>
      <div class="about-content">
        <p>{{aboutMe}}</p>
      </div>
    </div>
  </section>
  
  <section class="projects">
    <div class="container">
      <h2>Projects</h2>
      <div class="project-grid">
        {{#each projects}}
          <div class="project-card">
            {{#if imageUrl}}
            <div class="project-image">
              <img src="{{imageUrl}}" alt="{{name}}">
            </div>
            {{/if}}
            <h3>{{name}}</h3>
            <p>{{description}}</p>
            <div class="project-links">
              {{#if githubUrl}}
              <a href="{{githubUrl}}" target="_blank">GitHub</a>
              {{/if}}
              {{#if liveUrl}}
              <a href="{{liveUrl}}" target="_blank">Live Demo</a>
              {{/if}}
            </div>
            <div class="technologies">
              {{#each technologies}}
                <span class="tech-tag">{{this}}</span>
              {{/each}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </section>
  
  <section class="education">
    <div class="container">
      <h2>Education</h2>
      <div class="education-list">
        {{#each education}}
          <div class="education-item">
            <h3>{{degree}} in {{field}}</h3>
            <p class="institution">{{institution}}</p>
            <p class="years">{{startYear}} - {{endYear}}</p>
            {{#if gpa}}
            <p class="gpa">GPA: {{gpa}}</p>
            {{/if}}
          </div>
        {{/each}}
      </div>
    </div>
  </section>
  
  {{#if achievements.length}}
  <section class="achievements">
    <div class="container">
      <h2>Achievements</h2>
      <div class="achievements-list">
        {{#each achievements}}
          <div class="achievement-item">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            {{#if organization}}
            <p class="organization">{{organization}}</p>
            {{/if}}
            <p class="date">{{date}}</p>
          </div>
        {{/each}}
      </div>
    </div>
  </section>
  {{/if}}
  
  <footer>
    <div class="container">
      <p>&copy; {{currentYear}} {{personalInfo.name}}</p>
      <div class="social-links">
        {{#if socialLinks.github}}
        <a href="{{socialLinks.github}}" target="_blank">GitHub</a>
        {{/if}}
        {{#if socialLinks.linkedin}}
        <a href="{{socialLinks.linkedin}}" target="_blank">LinkedIn</a>
        {{/if}}
        {{#if socialLinks.twitter}}
        <a href="{{socialLinks.twitter}}" target="_blank">Twitter</a>
        {{/if}}
        {{#if socialLinks.website}}
        <a href="{{socialLinks.website}}" target="_blank">Website</a>
        {{/if}}
        {{#if socialLinks.other}}
        <a href="{{socialLinks.other}}" target="_blank">Other</a>
        {{/if}}
      </div>
    </div>
  </footer>
  
  <script src="script.js"></script>
</body>
</html>